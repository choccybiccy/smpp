#!/usr/bin/php
<?php

require_once __DIR__ . '/../vendor/autoload.php';

use Choccybiccy\Smpp\Providers\ApplicationServiceProvider;
use Choccybiccy\Smpp\EsmeApplication;
use League\Container\Container;
use League\Container\ReflectionContainer;

$container = (new Container())
    ->delegate(new ReflectionContainer())
    ->addServiceProvider(new ApplicationServiceProvider());

/** @var EsmeApplication $app */
$app = $container->get(EsmeApplication::class);
$app->run();
